@page "/edit-sub-element"

<PageTitle>Edit Sub Element</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save SubElement</RadzenAlert>
        <RadzenTemplateForm TItem="SubElementDto" Data="@subElement" Visible="@(subElement != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Window" Component="Window" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@windowsForWindowId" TextProperty="Name" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose Window" style="display: block; width: 100%" @bind-Value="@subElement.WindowId" Name="WindowId"
                         Count=@windowsForWindowIdCount LoadData=@windowsForWindowIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Element Type" Component="ElementType" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDown Data="@elementTypesForElementTypeId" TextProperty="Text" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose ElementType" style="display: block; width: 100%" @bind-Value="@subElement.ElementType.Id" Name="ElementTypeId"
                         Count=@elementTypesForElementTypeIdCount LoadData=@elementTypesForElementTypeIdLoadData />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Index" Component="Index" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@subElement.Index" Name="Index" />
                    <RadzenRequiredValidator Component="Index" Text="Index is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Width" Component="Width" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@subElement.Width" Name="Width" />
                    <RadzenRequiredValidator Component="Width" Text="Width is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Height" Component="Height" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@subElement.Height" Name="Height" />
                    <RadzenRequiredValidator Component="Height" Text="Height is required" />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

